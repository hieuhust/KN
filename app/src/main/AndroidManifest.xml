<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.anonymous.periodchecker">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/splashScreenTheme">
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="reversePortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="reversePortrait"/>

        <activity
            android:name=".info.view.MainInfoActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="reversePortrait"/>

        <activity
            android:name=".InformationRegisterActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="reversePortrait"/>
        <activity
            android:name=".MenstrualInformationRegisterActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="reversePortrait"/>
        <activity
            android:name=".period.PeriodInfoActivity"
            android:label="@string/title_activity_period_info"
            android:theme="@style/Theme.AppCompat"/>
    </application>

</manifest>